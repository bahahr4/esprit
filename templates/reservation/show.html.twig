{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <h1>Reservation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ reservation.type }}</td>
            </tr>
            <tr>
                <th>Details</th>
                <td>{{ reservation.details }}</td>
            </tr>
            <tr>
                <th>EventDate</th>
                <td>{{ reservation.eventDate ? reservation.eventDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>RequestedAt</th>
                <td>{{ reservation.requestedAt ? reservation.requestedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ reservation.status }}</td>
            </tr>
            <tr>
                <th>AdminNotes</th>
                <td>{{ reservation.adminNotes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservation_index') }}">back to list</a>

    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}">edit</a>

    {{ include('reservation/_delete_form.html.twig') }}
{% endblock %}
