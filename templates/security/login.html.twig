{% extends 'base_user.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <br><br><br>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg p-4">
                <h1 class="h3 mb-3 text-center font-weight-normal">Please sign in</h1>

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-center">
                        You are logged in as {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <form method="post">
                    <div class="form-group">
                        <label for="inputEmail" class="font-weight-bold">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="font-weight-bold">Password</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="text-center mt-4">
                        <button class="btn btn-primary btn-block" type="submit">Sign in</button>
                    </div>

                    <div class="mt-3 text-center">
                        <p class="text-muted">Don't have an account? <a href="{{ path('registration') }}" class="text-primary">Sign up</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
