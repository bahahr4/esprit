{% extends 'base.html.twig' %}

{% block title %}Libraries{% endblock %}

{% block content %}

    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>All Libraries</h4>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active"><a href="#">Libraries</a></li>
                <li class="breadcrumb-item active"><a href="#">All Libraries</a></li>
            </ol>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">All Libraries</h4>
                    <a href="{{ path('app_library_new') }}" class="btn btn-primary">+ Add new</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="table table-bordered">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Contact</th>
                                <th>Opening Hours</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for library in libraries %}
                                <tr>
                                    <td>{{ library.id }}</td>
                                    <td>{{ library.name }}</td>
                                    <td>{{ library.location }}</td>
                                    <td>{{ library.description }}</td>
                                    <td>{{ library.contact }}</td>
                                    <td>{{ library.openingHours }}</td>
                                    <td>
                                        <a href="{{ path('app_library_show', {'id': library.id}) }}" class="btn btn-sm btn-info"><i class="la la-eye"></i></a>
                                        <a href="{{ path('app_library_edit', {'id': library.id}) }}" class="btn btn-sm btn-primary"><i class="la la-pencil"></i></a>
                                        <form method="post" action="{{ path('app_library_delete', {'id': library.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this library?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ library.id) }}">
                                            <button class="btn btn-sm btn-danger"><i class="la la-trash-o"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center">No records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
