<form method="post" action="{{ path('app_library_delete', {'id': library.id}) }}"
      onsubmit="return confirm('Are you sure you want to delete this library?');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ library.id) }}">
    <button type="submit" class="btn btn-sm btn-danger">
        <i class="la la-trash-o"></i>
    </button>
</form>
