{% extends 'base.html.twig' %}

{% block title %}Subscription{% endblock %}

{% block content %}
    <h1>Subscription</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subscription.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ subscription.type }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ subscription.price }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ subscription.startDate ? subscription.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ subscription.endDate ? subscription.endDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_subscription_index') }}">back to list</a>

    <a href="{{ path('app_subscription_edit', {'id': subscription.id}) }}">edit</a>

    {{ include('subscription/_delete_form.html.twig') }}
{% endblock %}
