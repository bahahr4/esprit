{% extends 'base.html.twig' %}

{% block title %}Reply to Reclamation{% endblock %}

{% block content %}
    <h1>Reply to Reclamation</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.objet) }}
        {{ form_widget(form.objet, {'attr': {'class': 'form-control', 'placeholder': 'Enter subject here'}}) }}
        {# Display errors for 'objet' field if any #}
        {% if form.objet.vars.errors|length > 0 %}
            <div style="color: red">
                {{ form_errors(form.objet) }}
            </div>
        {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, {'attr': {'class': 'form-control', 'placeholder': 'Write your reply here...', 'rows': '4'}}) }}
        {# Display errors for 'content' field if any #}
        {% if form.content.vars.errors|length > 0 %}
            <div style="color: red">
                {{ form_errors(form.content) }}
            </div>
        {% endif %}
    </div>

    <button type="submit" class="btn btn-primary">Submit Reply</button>

    {{ form_end(form) }}
{% endblock %}
