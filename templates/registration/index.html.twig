{% extends 'base_user.html.twig' %}

{% block body %}
    <br><br><br> <br><br><br>
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-8 col-lg-6">
                    <div class="card shadow-lg">
                        <div class="card-body">
                            <h3 class="text-center mb-4 text-primary">Create Your Account</h3>
                            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                            <div class="mb-3">
                                <label for="name" class="form-label"><strong>Name</strong></label>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter your full name'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.name) }}</div>
                            </div>

                            <div class="mb-3">
                                <label for="email" class="form-label"><strong>Email</strong></label>
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'hello@example.com'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.email) }}</div>
                            </div>

                            <div class="mb-3">
                                <label for="phone" class="form-label"><strong>Phone Number</strong></label>
                                {{ form_widget(form.PhoneNumber, {'attr': {'class': 'form-control', 'placeholder': 'Enter your phone number'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.PhoneNumber) }}</div>
                            </div>

                            <div class="mb-3">
                                <label for="password" class="form-label"><strong>Password</strong></label>
                                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Create a secure password'}}) }}
                                <div class="form-text text-danger">{{ form_errors(form.password) }}</div>
                            </div>

                            <div class="mb-3">
                                <label for="gender" class="form-label"><strong>Gender</strong></label>
                                <div class="form-check">
                                    {{ form_widget(form.gender) }}
                                </div>
                                <div class="form-text text-danger">{{ form_errors(form.gender) }}</div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Sign Up</button>
                            </div>

                            {{ form_end(form) }}

                            <div class="text-center mt-3">
                                <p>Already have an account?
                                    <a class="text-primary fw-bold" href="{{ path('app_login') }}">Sign in here</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
