{% extends 'base.html.twig' %}

{% block title %}New Professor{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Create New Reclamation</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.type) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.description) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.datereclamation, 'date reclamation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.datereclamation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.datereclamation) }}
                        </div>


                        <button type="submit" class="btn btn-success w-100">Save</button>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('app_professor_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
