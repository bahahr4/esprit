{% extends 'base_user.html.twig' %}

{% block title %}Reclamation Index{% endblock %}

{% block body %}
    <!-- Heading Section -->
    <section class="heading-page header-text" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Here are your recent reclamations</h6>
                    <h2>Your Reclamations</h2>
                </div>
            </div>
        </div>
    </section>

    <!-- Reclamation List Section -->
    <section class="meetings-page" id="meetings">
        <div class="container">
            <div class="row">


                <!-- White Background Container for the List -->
                <div class="col-lg-12">
                    <div class="bg-white p-4 shadow-sm rounded" style="border: 24px">
                        <table class="table table-striped table-hover">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Date Reclamation</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reclamation in reclamations %}
                                <tr>
                                    <td>{{ reclamation.id }}</td>
                                    <td>{{ reclamation.type }}</td>
                                    <td>{{ reclamation.description }}</td>
                                    <td>{{ reclamation.daterecl ? reclamation.daterecl|date('Y-m-d') : 'No date' }}</td>
                                    <td>
                                        <a href="{{ path('app_reclamation_usershow', {'id': reclamation.id}) }}" class="btn btn-info btn-sm">Show</a>

                                        {# Show reply if it exists for this reclamation #}
                                        {% if reclamation.replies|length > 0 %}
                                            <a href="{{ path('app_reply_show_user', {'id': reclamation.replies[0].id}) }}" class="btn btn-warning btn-sm">Show Reply</a>
                                        {% else %}
                                            <span class="text-muted">No reply</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">No reclamations found.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </section>


{% endblock %}
