{% extends 'base.html.twig' %}

{% block title %}Replies List{% endblock %}

{% block content %}
    <div class="row page-titles mx-0">
        <div class="col-sm-6 p-md-0">
            <div class="welcome-text">
                <h4>Hi, welcome back!</h4>
                <span class="ml-1">Replies List</span>
            </div>
        </div>
        <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Replies</a></li>
            </ol>
        </div>
    </div>

    <!-- Table of Replies -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Reclamation ID</th>
                                <th>Content</th>
                                <th>Created At</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for reply in replies %}
                                <tr>
                                    <td>{{ reply.id }}</td>
                                    <td>{{ reply.reclamation.id }}</td>
                                    <td>{{ reply.content }}</td>
                                    <td>{{ reply.createdAt ? reply.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4" class="text-center">No replies found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
