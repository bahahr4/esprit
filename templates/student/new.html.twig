{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Create New Student</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.PhoneNumber, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.PhoneNumber, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.PhoneNumber) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.address, 'Address', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.address) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_label(form.password, 'password', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>

                        {# Ajout du champ 'gender' #}
                        <div class="form-group mb-3">
                            {{ form_label(form.gender, 'Gender', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.gender, {'attr': {'class': 'form-check'}}) }}
                            {{ form_errors(form.gender) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100">Save</button>

                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="text-center mt-3">
                    <a href="{{ path('app_student_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
