{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block content %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ student.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ student.name }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ student.email }}</td>
        </tr>
        <tr>
            <th>PhoneNumber</th>
            <td>{{ student.PhoneNumber }}</td>
        </tr>
        <tr>
            <th>Adress</th>
            <td>{{ student.address }}</td>
        </tr>
        <tr>
            <th>Gender</th> {# Ajout du champ Gender #}
            <td>{{ student.gender }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}" class="btn btn-secondary">Back to list</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}" class="btn btn-primary">Edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
