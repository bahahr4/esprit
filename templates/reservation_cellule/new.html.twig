{% extends 'base_user.html.twig' %}

{% block title %}Add Reservation{% endblock %}

{% block body %}
    <!-- Heading Section -->
    <section class="heading-page header-text" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h6>Create a New Reservation</h6>
                    <h2>Reservation Form</h2>
                </div>
            </div>
        </div>
    </section>

    <!-- Reservation Form Section -->
    <section class="meetings-page" id="meetings">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="meeting-single-item">

                                <div class="down-content">
                                    <a href="meeting-details.html"><h4>Online Teaching and Learning Tools</h4></a>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <form id="reservation-form" action="{{ path('app_reservation_cellule_new') }}" method="post">

                                                {{ form_start(form) }}

                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <h2>Please fill out the reservation details</h2>
                                                    </div>

                                                    {# Reservation Type Field #}
                                                    <div class="col-lg-4">
                                                            {{ form_label(form.type) }}
                                                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Select Type*'}}) }}
                                                            {% if form_errors(form.type) %}
                                                                <div style="color: red">
                                                                    {% for error in form_errors(form.type) %}
                                                                        <p>{{ error }}</p>
                                                                    {% endfor %}
                                                                </div>
                                                            {% endif %}
                                                    </div>

                                                    {# Reason Field #}
                                                    <div class="col-lg-4">

                                                            {{ form_label(form.reason) }}
                                                            {{ form_widget(form.reason, {'attr': {'class': 'form-control', 'placeholder': 'Reason*'}}) }}
                                                            {% if form_errors(form.reason) %}
                                                                <div style="color: red">
                                                                    {% for error in form_errors(form.reason) %}
                                                                        <p>{{ error }}</p>
                                                                    {% endfor %}
                                                                </div>
                                                            {% endif %}

                                                    </div>



                                                    {# Reserved At Field #}
                                                    <div class="col-lg-4">

                                                            {{ form_label(form.reservedAt) }}
                                                            {{ form_widget(form.reservedAt, {'attr': {'class': 'form-control', 'placeholder': 'Reserved Date*'}}) }}
                                                            {% if form_errors(form.reservedAt) %}
                                                                <div style="color: red">
                                                                    {% for error in form_errors(form.reservedAt) %}
                                                                        <p>{{ error }}</p>
                                                                    {% endfor %}
                                                                </div>
                                                            {% endif %}
                                                    </div>

                                                    {# Submit Button #}
                                                    <div class="main-button-red">
                                                            <button type="submit" id="form-submit" class="button">SUBMIT RESERVATION</button>
                                                    </div>
                                                </div>

                                                {{ form_end(form) }}
                                            </form>
                                        </div>
                                    </div>

                                </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="main-button-red">
                                <a href="meetings.html">Back To Meetings List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer">
            <p>Copyright Â© 2022 Edu Meeting Co., Ltd. All Rights Reserved.
                <br>Design: <a href="https://templatemo.com" target="_parent" title="free css templates">TemplateMo</a></p>
        </div>
    </section>

{% endblock %}
