{% extends 'base.html.twig' %}

{% block title %}New Professor{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Create New Professor</h4>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

                        <div class="form-group mb-3">
                            {{ form_label(form.type, 'Reservation Type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Select Reservation Type'}}) }}
                            {{ form_errors(form.type) }}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.reason, 'Reason for Reservation', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reason, {'attr': {'class': 'form-control', 'placeholder': 'Reason for reservation'}}) }}
                            {% if form.reason.vars.errors|length > 0 %}
                                <div class="text-danger mt-1">
                                    {% for error in form.reason.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.reservedAt, 'Reserved Date', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.reservedAt, {'attr': {'class': 'form-control', 'placeholder': 'Select a reserved date'}}) }}
                            {% if form.reservedAt.vars.errors|length > 0 %}
                                <div class="text-danger mt-1">
                                    {% for error in form.reservedAt.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="form-group mb-3">
                            {{ form_label(form.createdAt, 'Creation Date', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control', 'placeholder': 'Creation date (auto-generated)'}}) }}
                            {{ form_errors(form.createdAt) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit Reservation</button>

                        {{ form_end(form) }}

                    </div>
                </div>

            </div>
        </div>
    </div>

    {{ form_end(form) }}


{% endblock %}
